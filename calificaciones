public void sumatotal(){
	for(int i=0;i<calificaciones.length;i++){
		sumatotal+=calificaciones[i];
		
	}
		System.out.println("la calificacion total es:"+sumatotal/15);
	
}
public void sumaprimeros(){
	for(int i=0;i<5;i++){
		sumaprimeros+=calificaciones[i];
		
	}

	System.out.println("la suma de los 5 primeros es :"+sumaprimeros/5);
}

//}


public void sumaultimos(){
	for(int i=calificaciones.length-1;i>=10;i--){
		sumaultimos+=calificaciones[i];
		
	}
	
		System.out.println("la calificacion de los 5 ultimos es:"+sumaultimos/5);
	
}

public void mostrarresultados(){
